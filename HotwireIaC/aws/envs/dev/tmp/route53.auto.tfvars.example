# Copy to route53.auto.tfvars and fill in the values after installing ingress-nginx.

route53_zone_id = "ZXXXXXXXXXXXX"

# Get the NLB DNS:
# kubectl -n ingress-nginx get svc ingress-nginx-controller -o jsonpath='{.status.loadBalancer.ingress[0].hostname}'
lb_dns_name = "a1b2c3d4e5f6g7h8.elb.us-east-1.amazonaws.com"

# Get the NLB CanonicalHostedZoneId via AWS CLI:
