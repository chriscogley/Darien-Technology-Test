# Docker Development Environment Configuration for Login Service
# This file is used when running in Docker containers

# JWT Configuration (REQUIRED)
JWT_SECRET=YourSuperSecureJWT-Secret123!MinimumThirtyTwoCharsForJWT2024Development
JWT_EXPIRES_IN=1h

# Server Configuration
NODE_ENV=development
PORT=3001
TRUST_PROXY=false
REQUEST_SIZE_LIMIT=50mb

# Security Configuration
SECURE_COOKIES=false

# CORS Configuration - Allow frontend and container access
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://frontend:3000,http://172.20.0.0/16

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_PASSWORD_RESET_MAX=3

# Legacy API Configuration - Use Docker service name
LEGACY_API_URL=http://mock-legacy-api:8080/api
LEGACY_API_TIMEOUT=10000

# Health Check
HEALTH_CHECK_ENABLED=true

# Logging - Enhanced for development
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Features
SWAGGER_ENABLED=true
SWAGGER_TITLE=Login Service API (Docker Dev)
SWAGGER_VERSION=1.0.0
SWAGGER_PATH=/docs

# Metrics
METRICS_ENABLED=false
METRICS_PORT=9090

# Docker-specific configurations
HOSTNAME=0.0.0.0